{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["cypress", "node"]
  },
  "include": [
    "cypress/**/*.ts",
    "cypress/**/*.tsx",
    "cypress.config.ts",
    "src/**/*.cy.ts",
    "src/**/*.cy.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "amplify/**"
  ]
}
