{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.setup.ts",
    "jest.config.js",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "cypress.config.ts",
    "**/*.cy.ts",
    "**/*.cy.tsx",
    "amplify/**"
  ]
}
