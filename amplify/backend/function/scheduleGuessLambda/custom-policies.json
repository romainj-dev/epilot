[
  {
    "Action": [
      "scheduler:CreateSchedule"
    ],
    "Resource": [
      {
        "Fn::Sub": "arn:aws:scheduler:${AWS::Region}:${AWS::AccountId}:schedule/bigbet-guess-settlements-${env}/*"
      }
    ]
  },
  {
    "Action": [
      "iam:PassRole"
    ],
    "Resource": [
      {
        "Ref": "customguessSettlementSchedulerSchedulerRoleArn"
      }
    ]
  },
  {
    "Action": [
      "dynamodb:DescribeStream",
      "dynamodb:GetRecords",
      "dynamodb:GetShardIterator",
      "dynamodb:ListStreams"
    ],
    "Resource": [
      {
        "Fn::ImportValue": {
          "Fn::Join": [
            ":",
            [
              {
                "Ref": "apibigbetGraphQLAPIIdOutput"
              },
              "GetAtt:GuessTable:StreamArn"
            ]
          ]
        }
      }
    ]
  }
]
