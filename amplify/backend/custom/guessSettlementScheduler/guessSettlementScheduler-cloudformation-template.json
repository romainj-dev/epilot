{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "{\"createdOn\":\"Mac\",\"createdBy\":\"Amplify\",\"createdWith\":\"14.2.3\",\"stackType\":\"custom-CloudFormation\",\"metadata\":{\"whyContinueWithGen1\":\"Prefer not to answer\"}}",
  "Parameters": {
    "env": {
      "Type": "String"
    },
    "functionsettleGuessLambdaArn": {
      "Type": "String"
    }
  },
  "Resources": {
    "GuessSettlementScheduleGroup": {
      "Type": "AWS::Scheduler::ScheduleGroup",
      "Properties": {
        "Name": {
          "Fn::Join": [
            "",
            [
              "bigbet-guess-settlements-",
              {
                "Ref": "env"
              }
            ]
          ]
        }
      }
    },
    "SchedulerInvokeRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "scheduler.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "InvokeSettleGuessLambda",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "lambda:InvokeFunction"
                  ],
                  "Resource": {
                    "Ref": "functionsettleGuessLambdaArn"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "SchedulerRoleArn": {
      "Value": {
        "Fn::GetAtt": [
          "SchedulerInvokeRole",
          "Arn"
        ]
      }
    }
  }
}